<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    tools:openDrawer="end"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:background="@drawable/bg_wave"
            android:backgroundTint="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <com.smarteist.autoimageslider.SliderLayout
            android:id="@+id/imageSlider"
            android:layout_width="530dp"
            android:layout_height="190dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="58dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:menu="@menu/menu_item"
        app:headerLayout="@layout/header"
        android:layout_gravity="start"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_marginBottom="25dp">

        <!--Tombol 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_profile"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_person"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="My Profile"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Tombol 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_pswt"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">
                
                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_car"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="My Car"/>
                
                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_marginTop="245dp">

        <!--Tombol 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_krt"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_motor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="My Motor"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Tombol 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_movie"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_food"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="My Food"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:clipToPadding="false"
        android:layout_marginTop="515dp">

        <!--Tombol 1-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_holiday"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_shop"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="My Shop"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Tombol 2-->
        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="128dp"
            android:layout_margin="3dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="4dp"
            app:strokeWidth="4dp"
            android:onClick="btn_about"
            app:strokeColor="#2F9FFF"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#fff">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/rounded"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_about"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:text="About Us"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1px"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>